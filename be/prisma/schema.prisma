generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum StoreRole {
  OWNER
  STAFF
}

model Store {
  id        String        @id @default(uuid())
  name      String
  createdAt DateTime      @default(now())
  
  // Relations
  members   StoreMember[]
  storage   Storage?
  categories Category[]
}

model StoreMember {
  id        String    @id @default(uuid())
  storeId   String
  userId    String    // ID from external Auth service
  role      StoreRole // Enum: OWNER or STAFF
  joinedAt  DateTime  @default(now())

  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)

  // A user can only have one specific role per store to prevent duplicates
  @@unique([storeId, userId])
}

model Storage {
  id       String  @id @default(uuid())
  location String?
  capacity Int?
  
  storeId  String  @unique
  store    Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model Category {
  id             String    @id @default(uuid())
  name           String
  description    String?
  colorSettings  String?
  layer          String
  imageUrl       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  storeId        String
  store          Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  parentId       String?
  parent         Category? @relation("CategoryChildren", fields: [parentId], references: [id])
  children       Category[] @relation("CategoryChildren")

  @@index([storeId, name])
  @@index([parentId])
}

