# Example environment configuration for the backend
# Copy this file to `.env` and adjust values as needed.

NODE_ENV=development
PORT=9190

SUPERTOKENS_CONNECTION_URI=your-supertokens-connection-uri
APP_NAME=barcode-generator
API_DOMAIN=your-base-api-domain
WEBSITE_DOMAIN=http://localhost:4140
API_BASE_PATH=/auth
WEBSITE_BASE_PATH=/auth

# If set to "true", user registration is disabled
DISABLE_REGISTER=false

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres?schema=public

# Custom environment label (e.g. dev, staging, prod)
ENVIRONMENT=dev

# Business limits
MAX_STORAGE_BY_STORE=5
MAX_STORE_BY_USER=3
