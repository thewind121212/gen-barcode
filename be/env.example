# Example environment configuration for the backend
# Copy this file to `.env` and adjust values as needed.

NODE_ENV=development
PORT=9190

SUPERTOKENS_CONNECTION_URI=your-supertokens-connection-uri
APP_NAME=barcode-generator
API_DOMAIN=your-base-api-domain
WEBSITE_DOMAIN=http://localhost:4140
API_BASE_PATH=/auth
WEBSITE_BASE_PATH=/auth

# If set to "true", user registration is disabled
DISABLE_REGISTER=false

# PostgreSQL connection string
DATABASE_URL=your-postgres-url

# Custom environment label (e.g. dev, staging, prod)
ENVIRONMENT=dev

# Business limits
MAX_STORAGE_BY_STORE=6
MAX_STORE_BY_USER=51

# MinIO / S3 (optional)
# Run MinIO via deploy/infrastructure/docker-compose.yml then enable below.
MINIO_ENABLED=false
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=linh
MINIO_SECRET_KEY=linhdevtran99Q1@
MINIO_BUCKET=uploads
MINIO_REGION=us-east-1
MINIO_PUBLIC_READ=true
