{
    "name": "gen-barcode-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "be",
        "fe"
    ],
    "scripts": {
        "test:sentry": "ts-node deploy/monitor/sentry_test.ts",
        "build:all": "npm run build --workspace=fe && npm run build --workspace=be",
        "dev:fe": "npm run dev --workspace=fe",
        "dev:be": "npm run dev --workspace=be",
        "dev:fullstack": "npm run dev:fe && npm run dev:be",
        "lint:all": "npm run lint --workspace=fe && npm run lint --workspace=be",
        "typecheck:all": "npm run typecheck --workspace=be && cd fe && tsc -b"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "protobufjs": "^7.5.4",
        "supertokens-node": "^23.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@types/node": "^24.10.1",
        "@types/pg": "^8.15.6",
        "eslint": "^9.39.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
